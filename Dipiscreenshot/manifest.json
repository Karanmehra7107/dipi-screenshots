{
    "name": "DIPI Screenshots",
    "short_name": "dipiscreenshot",
    "version": "1.0.1",
    "manifest_version": 2,
    "description": "Web screenshot tool",
        "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "src/index.html",
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icons/icon48.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "<all_urls>"
    ]
}
